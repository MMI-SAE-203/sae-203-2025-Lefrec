---
const { id, prenom, nom, photo_URL, role} = Astro.props;
---

<article class="flex w-full text-center border-1 hover:border-ton rounded-lg p-2 justify-self-center justify-center">
    <a class="flex items-center flex-col no-underline w-full lg:w-[200px]" href={`/invites/${id}`}>
        <img
            class="w-full h-[150px] object-cover rounded-md lg:h-[200px]"
            src={photo_URL}
            alt={"Photo portrait de "+prenom+" "+nom}
            loading="lazy"
        />
        <p class="font-heading font-light line-clamp-1">{prenom+" "+nom}</p>
        <div class="flex gap-4 text-sm font-medium">
            <p>{role}</p>
        </div>
    </a>
</article>