---
const { id, titre, affiche_URL, annee_string, duree} = Astro.props;
---

<article class="flex w-fit h-fit text-center border-1 rounded-md p-2">
    <a class="flex items-center flex-col w-[125px]" href={`/films/${id}`}>
        <img
            class="w-full h-[175px] object-cover"
            src={affiche_URL}
            alt={"Affiche du film " + titre}
            loading="lazy"
        />
        <p class="font-heading font-light line-clamp-1">{titre}</p>
        <div class="flex gap-4 text-sm font-medium">
            <p>{annee_string}</p>
            <p>{duree}min</p>
        </div>
    </a>
</article>
