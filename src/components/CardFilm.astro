---
const { id, titre, affiche_URL, annee_string, duree} = Astro.props;
---

<article class="flex w-full text-center border-1 hover:border-ton rounded-md p-2 justify-self-center justify-center">
    <a class="flex items-center flex-col no-underline w-[100px] lg:w-[200px]" href={`/films/${id}`}>
        <img
            class="w-full h-[150px] object-cover lg:h-[300px]"
            src={affiche_URL}
            alt={"Affiche du film " + titre}
            loading="lazy"
        />
        <p class="font-heading font-light line-clamp-1">{titre}</p>
        <div class="flex gap-4 text-sm font-medium">
            <p>{annee_string}</p>
            <p>{duree}min</p>
        </div>
    </a>
</article>
