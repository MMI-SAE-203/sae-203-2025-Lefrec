---
import Logo from "../assets/icons/logo.svg";
import Burger_bars from "../assets/icons/burger-icon-bars.svg";
import Burger_cross from "../assets/icons/burger-icon-cross.svg";
---

<header
    x-data="{ open : false }"
    class="fixed flex w-full h-16 justify-between items-center px-3 py-1 bg-light z-2"
>
    <a href="/">
        <Logo />
    </a>
    <button @click="open = !open" aria-controls="menu" :aria-expanded="open">
        <Burger_bars x-show="!open" />
        <Burger_cross x-show="open" />
    </button>
    <nav
        x-show="open"
        :aria-expanded="open"
        :aria-hidden="!open"
        id="menu"
        class="flex-1 px-6 py-12 flex justify-between mt-16 flex-col fixed z-10 inset-0 bg-linear-to-b from-light to-ton visible opacity-100"
    >
        <ul class="flex flex-col gap-8 *:*:font-heading text-3xl tracking-wider">
            <li>
                <a href="/festival">Le festival</a>
            </li>
            <li>
                <a href="/programme">Le programme</a>
            </li>
            <li>
                <a href="/billeterie">La billeterie</a>
            </li>
            <li>
                <a href="/films">À l'affiche</a>
            </li>
            <li>
                <a href="/invites">Les invités</a>
            </li>
            <li>
                <a href="/infos">Infos pratiques</a>
            </li>
            <li>
                <a href="/contact">Nous contacter</a>
            </li>
        </ul>
    </nav>
</header>
